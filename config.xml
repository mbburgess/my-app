<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.spoinnakerweb.com.drc-tpa"
        versionCode = "201" 
        version     = "1.4.4" >

    <!-- versionCode is optional and Android only -->
    <preference name="iosPersistentFileLocation" value="library-nosync" />
    <preference name="BackupWebStorage" value="none" />
    
    <preference name="phonegap-version" value="cli-5.2.0" />

    <name>iTransition</name>

    <description>
        Give us 10 minutes, this app will give you a Draft Transition Plan for your IEP. 
    </description>

    <author href="http://www.drckansas.org" email="info@drckansas.org">
        Hardeep Shoker 
    </author>
    
    <access origin="*" />
    <gap:plugin name="org.apache.cordova.network-information"  />
    <gap:plugin name="org.apache.cordova.inappbrowser" />

    <icon src="res/icon.png" />
    <icon src="icon57.png" gap:platform="ios" width="57" height="57"/>
    <icon src="icon72.png" gap:platform="ios" width="57" height="57"/>
    <gap:splash src="res/splash.png" />


</widget>

